<!--components/lyric/lyric.wxml-->
<scroll-view 
  hidden="{{isShowLyric}}" 
  class="lyric-scroll" 
  scroll-y  
  scroll-top="{{scrollTop}}"

>
  <view class="lyric-panel">
    <block wx:for="{{lrcList}}" wx:key="item">
      <view class="lyric {{index===curLrcIndex ? 'hightlight-lyric' : ''}}">{{item.lrc}}</view>
    </block>
  </view>
</scroll-view>
